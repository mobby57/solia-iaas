// apps/api/src/index.ts
import Fastify from 'fastify';

const app = Fastify();

app.get('/', async (request, reply) => {
  return { hello: 'Solia API' };
});

const start = async () => {
  try {
    await app.listen({ port: 3000 });
    console.log('ðŸš€ API server running on http://localhost:3000');
  } catch (err) {
    app.log.error(err);
    process.exit(1);
  }
};

start();
