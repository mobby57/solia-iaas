{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "sourceMap": false,
    "types": ["node", "fastify", "vitest"],
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@api/*": ["../../apps/api/src/*"]
    }
  },
  "include": ["src", "prisma/seeds"],
  "exclude": ["node_modules", "dist"]
}
